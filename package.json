{
  "name": "browser-extension-react-typescript-starter",
  "version": "0.0.0",
  "description": "Template for browser extension (Chromium based browsers and Firefox support)",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "scripts": {
    "release": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf dist/*",
    "build": "webpack --mode production",
    "watch": "webpack --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{html,tsx,ts,scss,css}'",
    "commit": "git-cz"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@tsconfig/create-react-app": "^1.0.2",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "babel-eslint": "^10.1.0",
    "copy-webpack-plugin": "8.1.1",
    "css-loader": "^5.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "extensionizer": "^1.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "node-sass": "^7.0.0",
    "prettier": "^2.3.0",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.4",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{html,tsx,ts,scss,css}": [
      "npm run prettier"
    ],
    "src/**/*.{tsx,ts}": [
      "npm run lint"
    ]
  }
}
